; Test for function "dec"
; ------------------------------------------------------------
(load "testing.rbl")
(context 'test)

; Basic
; ------------------------------------------------------------
(test "1: dec on positive number"
  (dec 5)
  4
)

; Zero
; ------------------------------------------------------------
(test "2: dec on zero"
  (dec 0)
  -1
)

; Negative numbers
; ------------------------------------------------------------
(test "3: dec on negative number"
  (dec -3)
  -4
)

; Local variable
; ------------------------------------------------------------
(test "4: dec on let-bound x"
  (let ((x 10))
    (dec x))
  9
)

; Float
; ------------------------------------------------------------
(test "5: dec on float"
  (dec 1.5)
  0.5
)

; Large integer (within 64-bit range)
; ------------------------------------------------------------
(test "6: dec on large integer"
  (dec 9000000000000000000)
  8999999999999999999
)
