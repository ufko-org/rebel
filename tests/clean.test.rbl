; Test for function "clean"
; ------------------------------------------------------------
(load "testing.rbl")
(context 'test)

; Clean numbers
; ------------------------------------------------------------
(test "1: remove integers from mixed list"
  (= (clean integer? '(1 1.1 2 2.2 3 3.3)) '(1.1 2.2 3.3))
  true
)

; Clean true values
; ------------------------------------------------------------
(test "2: remove true? values from list"
  (= (clean true? '(a nil b nil c nil)) '(nil nil nil))
  true
)
