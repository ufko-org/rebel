; Test for function "address"
; ------------------------------------------------------------
(load "testing.rbl")
(context 'test)

; Strings
; ------------------------------------------------------------
(test "1: address of local string variable"
  (local (s)
    (set 's "foo")
    (= (address s) (last (dump s)))
  )
  true
)

(test "2: address of C:C context"
    (let (C:C "foo")
      (= (address C) (last (dump C:C)))
    )
  true
)
